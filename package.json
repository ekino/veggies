{
    "name": "@ekino/veggies",
    "version": "1.4.0",
    "description": "Veggies is an awesome cucumberjs library for API/CLI testing. Great for testing APIs built upon Express, Koa, HAPI, Loopback and others. It's also the perfect companion for testing CLI applications built with commander, meow & Co.",
    "tags": [
        "bdd",
        "cucumber",
        "gherkin",
        "testing",
        "api",
        "http",
        "cli"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ekino/veggies.git"
    },
    "author": "plouc <https://github.com/plouc>",
    "maintainers": [
        {
            "name": "Ekino"
        }
    ],
    "license": "MIT",
    "engines": {
        "node": ">=20.x"
    },
    "type": "module",
    "files": [
        "/bin",
        "/lib"
    ],
    "main": "./lib/esm/index.js",
    "bin": {
        "veggies": "./bin/veggies.js"
    },
    "types": "lib/esm/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/esm/index.d.ts",
                "default": "./lib/esm/index.js"
            },
            "require": {
                "types": "./lib/cjs/index.d.ts",
                "default": "./lib/cjs/index.js"
            }
        }
    },
    "dependencies": {
        "axios": "1.7.9",
        "axios-cookiejar-support": "5.0.5",
        "chai": "5.1.2",
        "fast-glob": "3.3.3",
        "form-data": "4.0.1",
        "jest-diff": "29.7.0",
        "js-yaml": "4.1.0",
        "luxon": "3.5.0",
        "natural-compare": "1.4.0",
        "pretty-format": "29.7.0",
        "tough-cookie": "5.1.1"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.7.1",
        "@cucumber/cucumber": "^11.2.0",
        "@eslint/js": "^9.20.0",
        "@types/chai": "^5.0.1",
        "@types/js-yaml": "^4.0.9",
        "@types/luxon": "^3.4.2",
        "@types/node": "^22.13.1",
        "@vitest/coverage-v8": "^3.0.5",
        "babylon": "^6.18.0",
        "commitlint": "^19.7.1",
        "eslint": "^9.20.0",
        "gh-pages": "^6.3.0",
        "globals": "^15.14.0",
        "jsdoc": "^4.0.4",
        "minami": "^1.2.3",
        "mustache": "^4.2.0",
        "nock": "^14.0.1",
        "prettier": "^3.5.0",
        "typescript": "^5.7.3",
        "vitest": "^3.0.5"
    },
    "peerDependencies": {
        "@cucumber/cucumber": ">=11.x"
    },
    "scripts": {
        "build": "pnpm run build:esm && pnpm run build:cjs",
        "build:esm": "tsc -p tsconfig.lib.json --outDir lib/esm",
        "build:cjs": "tsc -p tsconfig.lib.json --module CommonJS --moduleResolution Node --outDir lib/cjs",
        "postbuild:cjs": "echo '{\"type\": \"commonjs\"}' > lib/cjs/package.json",
        "test": "vitest --run",
        "test-cover": "vitest run --coverage",
        "test-func": "./bin/veggies.js --import tests/functional/support tests/functional/features",
        "fmt": "prettier --cache --color --write \"{src,tests,scripts}/**/*.js\" \"*.{yml,yaml,json}\"",
        "check-fmt": "prettier --cache --list-different \"{src,tests,scripts}/**/*.js\" \"*.{yml,yaml,json}\"",
        "lint": "eslint --quiet --cache \"src/**/*.{js,mjs,cjs}\"",
        "lint-fix": "eslint --quiet --cache --fix \"src/**/*.{js,mjs,cjs}\"",
        "readme": "node scripts/generate_readme",
        "check-readme": "node scripts/generate_readme --check",
        "doc": "jsdoc -c .jsdoc.json --verbose",
        "doc-pub": "pnpm run readme && pnpm run doc && gh-pages -d _doc",
        "examples": "./bin/veggies.js --import examples/support examples/features --tags='@offline'",
        "postinstall": "git config core.hooksPath ./.githooks || true"
    }
}
